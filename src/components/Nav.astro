---
interface navProps {
  href: string;
}

const { href } = Astro.props;
---

<div class="flex justify-center items-center pt-10 sm:h-52 sticky">
  <ul class="flex justify-center max-w-md">
    <li>
      <a
        class="text-white px-0 sm:px-8 md:px-16 xl:px-16 hover:text-rose-300 text-xl"
        href={href}>Start</a
      >
    </li>
    <li>
      <a
        class="text-white px-0 sm:px-8 md:px-16 xl:px-16 hover:text-rose-300 text-xl"
        href={href}>Experience</a
      >
    </li>
    <li>
      <a
        class="text-white px-0 sm:px-8 md:px-16 xl:px-16 hover:text-rose-300 text-xl"
        href={href}>Projects</a
      >
    </li>
    <li>
      <a
        class="text-white px-0 sm:px-8 md:px-16 xl:px-16 hover:text-rose-300 text-xl"
        href={href}>Skills</a
      >
    </li>
  </ul>
</div>
