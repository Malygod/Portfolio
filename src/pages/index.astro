---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import Foto from "../img/yo.jpg";
import { AtaliaMF } from "../components/ataliaFM";
---

<Layout title="Portfolio">

    <div class="flex justify-center pt-16">
      <div
        class="flex justify-center items-center w-40 h-40 overflow-hidden rounded-full border-4 border-white antialiased"
      >
        <Image
          src={Foto}
          alt="Foto de perfil"
          class="w-full h-auto rounded-full"
        />
      </div>
    </div>
    <div class="flex justify-center pt-16">
      <h1 class="text-white text-center text-2xl">Matías Sepúlveda</h1>
    </div>
    <div class="flex justify-center pt-16">
      <h1 class="text-white text-center text-4xl sm:text-5xl md:text-6xl">
        Software Engineer
      </h1>
    </div>
    <div class="flex justify-center pt-16">
      <h1 class="text-white text-center text-2xl max-w-96">
        I have a strong passion for design aesthetic focused interfaces
      </h1>
    </div>
    <div class="flex justify-center items-center pt-16">
      <div class="flex justify-around w-36">
        <a
          href="https://github.com/malygod"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-white h-10 w-10 hover:text-rose-200 hover:text-4xl"
            ><path
              d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
            ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
          ></a
        >
      </div>
    </div>

</Layout>
