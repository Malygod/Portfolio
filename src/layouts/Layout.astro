---
import Nav from "../components/Nav.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class=" bg-stone-100 dark:bg-black">
    <div
      class="absolute max-w-full top-0 z-[-2] h-svh w-svw transition-colors duration-500 bg-[radial-gradient(ellipse_90%_80%_at_50%_-30%,rgba(150,0,0,1),rgba(255,255,255,0))] dark:bg-[radial-gradient(ellipse_70%_80%_at_50%_-20%,rgba(50,50,50,0.8),rgba(255,255,255,0))]"
    >
      <Nav href="/" href="/" href="/" href="/" />
      <slot />
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, "Segoe UI";
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  /* Estilo para Chrome, Safari y Opera */
  ::-webkit-scrollbar {
    scrollbar-width: thin; /* Ancho del scrollbar */
    scrollbar-color: white black; /* Color del pulgar y la pista del scrollbar */
    width: 5px; /* Ancho del scrollbar */
  }

  ::-webkit-scrollbar-track {
    background: #555; /* Color de la pista del scrollbar */
  }

  ::-webkit-scrollbar-thumb {
    background: #555; /* Color del pulgar del scrollbar */
    display: none;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #000000; /* Color del pulgar del scrollbar al pasar el mouse */
  }

  /* Estilo para Firefox */
  * {
    scrollbar-width: thin; /* Ancho del scrollbar */
    scrollbar-color: white black; /* Color del pulgar y la pista del scrollbar */
  }

  /* animation slide up */

  @keyframes slide-up {
    0% {
      opacity: 0;
      transform: translate3d(0, 50%, 0);
    }
    100% {
      opacity: 1;
      transform: translate3d(0, 0%, 0);
    }
  }

  .animate-slide-up {
    animation: slide-up 0.7s ease-out;
    opacity: 1;
  }

  /* animation left to right */

  @keyframes slide-right {
    0% {
      opacity: 0;
      transform: translate3d(50%, 0, 0);
    }
    100% {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  .animate-slide-right {
    animation: slide-right 1s ease-out;
    opacity: 1;
  }
</style>
