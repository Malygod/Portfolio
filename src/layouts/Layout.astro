---
import Nav from "../components/Nav.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div
      class="absolute max-w-full top-0 z-[-2] h-svh w-svw bg-black bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(240,50,100,0.3),rgba(255,255,255,0))]"
    >
      <Nav href="/" href="/" href="/" href="/" />
      <slot />
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, "Segoe UI";
    background: black;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  /* Estilo para Chrome, Safari y Opera */
  ::-webkit-scrollbar {
    width: 0px; /* Ancho del scrollbar */
  }

  ::-webkit-scrollbar-track {
    background: transparent; /* Color de la pista del scrollbar */
  }

  ::-webkit-scrollbar-thumb {
    background: white; /* Color del pulgar del scrollbar */
    display: none;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #555; /* Color del pulgar del scrollbar al pasar el mouse */
  }

  /* Estilo para Firefox */
  * {
    scrollbar-width: thin; /* Ancho del scrollbar */
    scrollbar-color: #888 #f1f1f1; /* Color del pulgar y la pista del scrollbar */
  }
</style>
